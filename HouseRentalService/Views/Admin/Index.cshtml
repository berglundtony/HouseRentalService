@model IEnumerable<HouseRentalService.House>

@{
    ViewBag.Title = "Houses";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateHouse")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MultiplicationValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price.BaseDayFee)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MultiplicationValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price.BaseDayFee)@Html.DisplayText("EUR")
        </td>
        <td>
            @Html.ActionLink("Edit", "EditHouse", new { id=item.HouseID }) |
            @Html.ActionLink("Details", "Details", new { id=item.HouseID }) |
            @Html.ActionLink("Delete", "DeleteHouse", new { id=item.HouseID })
        </td>
    </tr>
}

</table>
